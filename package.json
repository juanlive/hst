{
  "name": "hstoken",
  "version": "0.1.0",
  "description": "Hydro Security Token System",
  "scripts": {
    "build": "npm run buidl",
    "buidl": "rm -rf build/ && npx truffle compile",
    "chain": "npx ganache-cli --port 8545 --seed HydroST -l 32000000",
    "test": "npx truffle test --network development",
    "cover": "rm -f coverage.json && rm -rf coverage && npx solidity-coverage",
    "chain-cover": "npx testrpc-sc --port 8555 -l 0xfffffffffff -g 0x01 --allowUnlimitedContractSize --seed HydroST",
    "test-cover": "npx truffle test --network coverage"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "coveralls": "^3.0.5",
    "eslint": "^5.9.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.0",
    "solidity-coverage": "^0.5.11"
  },
  "dependencies": {
    "ethereumjs-util": "^6.0.0",
    "ganache-cli": "^6.5.0",
    "solc": "^0.5.10",
    "truffle": "^5.0.27",
    "truffle-assertions": "^0.8.2"
  }
}
